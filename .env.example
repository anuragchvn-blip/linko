# Alchemy API Key for Polygon
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Polygon API URL
NEXT_PUBLIC_POLYGON_API_URL=https://polygon-amoy.g.alchemy.com/v2/

# Pinata Credentials for IPFS pinning
# Get these at: https://app.pinata.cloud/developers/api-keys
# Create a new API key and you'll get all three values
PINATA_JWT=your_pinata_jwt_token_here
PINATA_API_KEY=your_pinata_api_key_here
PINATA_API_SECRET=your_pinata_api_secret_here

# Smart Contract Deployment
DEPLOYER_PRIVATE_KEY=your_private_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Contract Address (fill after deployment)
NEXT_PUBLIC_CONTRACT_ADDRESS=
